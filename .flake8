[flake8]
max-line-length = 100
exclude = 
    .venv,
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    cache,
    *.egg-info,
    build,
    dist
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
per-file-ignores =
    __init__.py:F401


